{
  "name": "Monaco",
  "lowCaseName": "monaco",
  "description": "Monaco is a code editor plugin for MODX.",
  "version": "1.0.10-pl",
  "author": "matdave",
  "package": {
    "elements": {
      "plugins": [{
        "name": "Monaco",
        "file": "monaco.php",
        "description": "Monaco is a code editor plugin for MODX.",
        "events": [
          "OnChunkFormPrerender",
          "OnPluginFormPrerender",
          "OnSnipFormPrerender",
          "OnTempFormPrerender",
          "OnFileEditFormPrerender",
          "OnFileCreateFormPrerender",
          "OnDocFormPrerender",
          "OnRichTextEditorRegister",
          "OnManagerPageBeforeRender"
        ]
      }]
    },
    "systemSettings": [
      {
        "key": "theme",
        "value": "vs"
      },
      {
        "key": "font_size",
        "type": "numberfield",
        "value": "14"
      },
      {
        "key": "word_wrap",
        "value": "off"
      },
      {
        "key": "minimap",
        "type": "combo-boolean",
        "value": "1"
      }
    ]
  },
  "build": {
    "resolver": {
      "after": [
        "resolve.element-editor.php"
      ]
    }
  }
}